{
  "name": "@tcpip/dns",
  "version": "0.2.1",
  "description": "DNS server built on tcpip.js",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup --clean",
    "clean": "rm -rf dist",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@tcpip/wire": "0.1"
  },
  "peerDependencies": {
    "tcpip": "0.3"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "tcpip": "0.3",
    "typescript": "^5.0.4",
    "vitest": "^3.0.1"
  }
}
